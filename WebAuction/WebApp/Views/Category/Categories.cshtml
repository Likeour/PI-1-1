

@{
    ViewBag.Title = "Categories";

}
<div class="container col-lg-push-4">
    <h2>Adding new design</h2>
    <div class="form-group">
        <label for="name">Name of new Category</label>
        <input type="text" class="form-control" id="name" placeholder="Category name" name="name">
    </div>
    <button type="submit" class="btn btn-default" onclick="AddCategory()">Submit</button>
</div>
@section scripts{
    <script type="text/javascript">

    function AddCategory() {
        var Category = {
            Name: $('#name').val(),
            
        }
        if (Category.Name.length < 3)
            alert('Name must have at least 3 symbols')
        else if (Category.Name.length < 5)
            alert('Name must have at least 5 symbols')
        else
            $.ajax({
                url: '/api/hotel/',
                type: 'POST',
                dataType: 'JSON',
                data: JSON.stringify(Category),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    alert("Success")
                },
                error: function (error) {
                    alert(error.responseText);
                }
            });
    }
    </script>
}